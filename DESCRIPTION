Package: swcrt
Type: Package
Title: Draw and export stepped-wedge cluster randomised trial design diagrams
Version: 0.1
Authors@R: person(given   = "Michael J",
                  family  = "Grayling",
                  email   = "michael.grayling@newcastle.ac.uk",
                  role    = c("aut", "cre"))
Imports:
    dplyr,
    flextable,
    knitr,
    officer,
